<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_grild"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/products_img"
        android:textSize="18sp"
        android:scaleType="fitXY"
        android:layout_margin="6dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/products_img"
        android:id="@+id/products_name"
        android:text="曲奇200克"
        android:textSize="14sp"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/products_price"
        android:text="￥36"
        android:textSize="14sp"
        android:textColor="#FD00FFCC"
        android:layout_below="@+id/products_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>