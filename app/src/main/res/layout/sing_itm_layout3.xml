<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/tianmao_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/ic_launcher_round"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/ishot"
        app:layout_constraintLeft_toRightOf="@id/tianmao_image"
        android:background="#FF0000"
        android:text="热门"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        app:layout_constraintLeft_toRightOf="@id/ishot"

        android:text="这是一个标题，你看一下到家地方"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/discount_info"
        app:layout_constraintTop_toBottomOf="@id/ishot"
       android:textColor="#ff00"
        android:text="asdfasdfasdfasdfsadfasdfsadfasdf"
        app:layout_constraintLeft_toRightOf="@id/tianmao_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>